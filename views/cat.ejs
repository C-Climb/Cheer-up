<% include partials/header %>
<% include partials/nav %>
    <div class="container">
        <div class="image--container">
            <% randCatImages.forEach((randCatImages) => { %>
                <div class="image--container__inner">
                    <img class="image--resize" src="<%=randCatImages.url%>" alt="A cute cat!"> 
                <div class="image--source">
                    <div><a href="<%=randCatImages.url%>" target="_blank" rel="noopener noreferrer">Source</a></div>
                </div>
                </div>
                <div class="image--container__flex">
                    <div><button class="button--back">Back</button></div>
                    <div><a class="button--next" href="<%=nextCatImages.url%>">Next</a></div>
                </div>
            <% }); %>
        </div>
        <div class="facts--container">
            <div><h3>Cat Fact :</h3></div>
            <div><p><%=catFacts%></p></div>
        </div>
    </div>
<% include partials/headerEnd %>